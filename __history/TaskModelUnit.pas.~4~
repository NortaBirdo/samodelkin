unit TaskModelUnit;

interface

uses uADCompClient, SysUtils;
type

TTaskModel = class
  public
  QueryConnect: TADQuery;
  procedure TransferTask (IdProjectFrom, IDProjectTo, IdTask: integer);

end;

implementation

{ TTaskModel }

procedure TTaskModel.TransferTask(IDProjectTo, IdTask: integer);
var
  sQuery: string;
begin
  with QueryConnect do
  begin
    close;
    sql.Clear;
    sQuery := 'UPDATE TASK SET project_link = ' +  IntToStr(IDProjectTo) + 'WHERE id = ' + IntToStr(IdTask);
    sql.Add(sQuery);
    ExecSQL;
  end;
end;

end.
